<div class="row tests_title">
  <div class="col-sm-6 col-sm-offset-1"><h1>사이버 중독 진단평가</h1></div>
</div>
<div class="row tests_items">
<% i = 1 %>
<div class="col-sm-10 col-sm-offset-1">
  <% @tests.each do |test| %>
  <div class="row tests_item">
    <div class="col-sm-1 col-sm-offset-1 tests_item_order"><%= i %></div>
    <div class="col-sm-6 col-sm-offset-0 tests_item_question">
      <%= test.content %>
    </div>
    <div class="col-sm-3 col-sm-offset-0 tests_item_inputs">
      <input type="radio" class="tests_item_inputs_radio" name="ans_<%= i %>" value="1">
      <input type="radio" class="tests_item_inputs_radio" name="ans_<%= i %>" value="2">
      <input type="radio" class="tests_item_inputs_radio" name="ans_<%= i %>" value="3">
      <input type="radio" class="tests_item_inputs_radio" name="ans_<%= i %>" value="4">
      <input type="radio" class="tests_item_inputs_radio" name="ans_<%= i %>" value="5">
    </div>
  </div>
  <% i = i + 1 %>
  <% end %>
</div>
</div>
